import java.util.Random;

public class RandomStringFromArray
{
  	public static void main(String[] args)
    {
      	String[] wordArr={"Lunar", "Tera", "stellar", "Solaris", "Andromeda", Venus, "Mars"};
      	Random randomize = new Random();
      	int randomWord = randomize.nextInt(wordArr.length);
      	System.out.println(wordArr[randomWord]);
    }
}
String random = (universe[new Random().nextInt(wordArr.length)]);
